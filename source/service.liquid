---
pagination:
  data: level3array
  size: 1
  alias: service
  addAllPagesToCollections: true
permalink: "service/{{ service.key | slug }}/"
layout: layouts/default.liquid
tags: service
eleventyComputed:
  title: "{{ service.title }}"
  parentKey: "{{ service.parent.key }}"
  parentTitle: "{{ service.parent.title }}"
  breadcrumb: "{{ service.title }}"
---

<main class="section service pt-6">
  <div class="container">
    <section class="columns">
      <div class="column is-3">
        {% include partials/_circular-icon.html, iconKey: parentKey, iconTitle:
        parentTitle %}
      </div>
      <div class="column is-6 is-flex is-align-items-center">
        <h1 class="title is-3">{{ service.title }}</h1>
      </div>
    </section>

    <section class="columns">
      <article class="column is-9">
        <div class="columns">
          <div class="column is-8 is-offset-4">
            <div class="buttons">
              {% if service.requirements %}
              <a class="button" href="#requirements">Voraussetzungen</a>
              {% endif %} {% if service.documents %}
              <a class="button" href="#documents">Unterlagen</a>
              {% endif %} {% if service.costs %}
              <a class="button" href="#costs">Gebühren</a>
              {% endif %} {% if service.time %}
              <a class="button" href="#time">Bearbeitungszeit</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="columns pt-6">
          <div class="column is-4 is-flex is-flex-direction-column">
            <figure class="image is-128x128 section-icon">
              <img
                src="/images/icon_requirements.svg"
                alt="Icon für Voraussetzungen"
              />
            </figure>
          </div>
          <div class="column is-8">
            {% if service.requirements %}
            <section id="requirements">
              <div
                class="section-title-wrapper is-flex is-justify-content-space-between"
              >
                <h3 class="title is-4 pb-2 mb-0 has-text-weight-normal">
                  Voraussetzungen
                </h3>
                <div class="is-flex is-align-items-flex-end pb-2">
                  <i class="is-size-7" data-section-id="requirements"
                    >Alle Infos öffnen</i
                  >
                </div>
              </div>
              {% for element in service.requirements %} {% if element.label %}
              <div class="is-flex section-item">
                <div class="py-3 is-align-self-flex-start">
                  {% include partials/_checkbox.html, label: element.label %}
                </div>
                <details class="py-3 ml-3">
                  <summary>
                    <div class="media is-relative">
                      <div class="media-content">
                        <strong>{{ element.label }}</strong>
                      </div>
                      <div class="media-right">
                        <figure class="image is-32x32">
                          <img
                            class="arrow-down"
                            src="/images/arrow_down_off.svg"
                            alt="Pfeil-Icon"
                          />
                        </figure>
                      </div>
                    </div>
                  </summary>
                  <p class="pt-0">{{ element.content }}</p>
                </details>
              </div>
              {% else %}
              <div class="is-flex section-item">
                <div class="py-3 is-align-self-flex-start">
                  {% include partials/_checkbox.html, label: element %}
                </div>
                <div class="py-3 ml-3">
                  {{ element }}
                </div>
              </div>
              {% endif %} {% endfor %}
            </section>
            {% endif %}
          </div>
        </div>
        <div class="columns mt-6">
          <div class="column is-4 is-flex is-flex-direction-column">
            <figure class="image is-128x128 section-icon">
              <img
                src="/images/icon_documents.svg"
                alt="Icon für Erforderliche Unterlagen"
              />
            </figure>
          </div>
          <div class="column is-8">
            {% if service.documents %}
            <section id="documents">
              <div
                class="section-title-wrapper is-flex is-justify-content-space-between"
              >
                <h3 class="title is-4 pb-2 mb-0 has-text-weight-normal">
                  Erforderliche Unterlagen
                </h3>
                <div class="is-flex is-align-items-flex-end pb-2">
                  <i class="is-size-7" data-section-id="documents"
                    >Alle Infos öffnen</i
                  >
                </div>
              </div>
              {% for element in service.documents %} {% if element.label %}
              <div class="is-flex section-item">
                <div class="py-3 is-align-self-flex-start">
                  {% include partials/_checkbox.html, label: element.label %}
                </div>
                <details class="py-3 ml-3">
                  <summary>
                    <div class="media is-relative">
                      <div class="media-content">
                        <strong>{{ element.label }}</strong>
                      </div>
                      <div class="media-right">
                        <figure class="image is-32x32">
                          <img
                            class="arrow-down"
                            src="/images/arrow_down_off.svg"
                            alt="Pfeil-Icon"
                          />
                        </figure>
                      </div>
                    </div>
                  </summary>
                  <p class="pt-0">{{ element.content }}</p>
                </details>
              </div>
              {% else %}
              <div class="is-flex section-item">
                <div class="py-3 is-align-self-flex-start">
                  {% include partials/_checkbox.html, label: element %}
                </div>
                <div class="py-3 ml-3">
                  {{ element }}
                </div>
              </div>
              {% endif %} {% endfor %}
            </section>
            {% endif %}
          </div>
        </div>
        <div class="columns mt-6">
          <div class="column is-4 is-flex is-flex-direction-column">
            <figure class="image is-128x128 section-icon">
              <img src="/images/icon_costs.svg" alt="Icon für Gebühren" />
            </figure>
          </div>
          <div class="column is-8">
            {% if service.costs %}
            <section id="costs">
              <h3 class="title is-4 pb-2 mb-0 has-text-weight-normal">
                Gebühren
              </h3>
              <ul class="pb-4 mt-4">
                {% for element in service.costs %}
                <li class="content mt-2 mb-0">
                  {% if element.label %}
                  <strong>{{ element.label }}</strong
                  ><br />
                  <p>{{ element.content }}</p>
                  {% else %}
                  {{ element }}
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </section>
            {% endif %}
          </div>
        </div>
        <div class="columns mt-6">
          <div class="column is-4 is-flex is-flex-direction-column">
            <figure class="image is-128x128 section-icon">
              <img
                src="/images/icon_time.svg"
                alt="Icon für Bearbeitungszeit"
              />
            </figure>
          </div>
          <div class="column is-8">
            {% if service.time %}
            <section id="time">
              <h3 class="title is-4 pb-2 mb-0 has-text-weight-normal">
                Durchschnittliche Bearbeitungszeit
              </h3>
              <ul class="pb-4 mt-4">
                {% for element in service.time %}
                <li class="content mt-2 mb-0">
                  {% if element.label %}
                  <strong>{{ element.label }}</strong
                  ><br />
                  <p>{{ element.content }}</p>
                  {% else %}
                  {{ element }}
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </section>
            {% endif %}
          </div>
        </div>
        <div class="columns mt-6">
          <div class="column is-8 is-offset-4">
            <section class="bottom-buttons-wrapper">
              <a class="button is-light" disabled>Nötige Formulare aufrufen</a>
              <button class="button is-outlined" onclick="window.print()">
                Diese Seite als PDF herunterladen
              </button>
            </section>
          </div>
        </div>
      </article>
      <aside class="column is-3">
        <div>
          <a href="/map" class="button is-primary"
            >Termin in meiner Nähe suchen</a
          >

          <a
            href="/help/{{ service.key | slug }}/appointment"
            class="button is-primary mt-5"
            {%-
            unless
            service.appointment.berlin.url
            -%}
            disabled
            {%-
            endunless
            -%}
            >Termin in ganz Berlin suchen</a
          >

          <hr />

          <a href="/help/{{ service.key | slug }}" class="mt-5 link-portal">
            Zum Service-Portal Berlin >
            <br />
            {{ service.title }}
          </a>

          <div class="print-wrapper">
            <button class="print-button is-size-6">
              <div class="print-icon-wrapper">
                <figure class="image is-1by1">
                  <img src="/images/icon_drucken.svg" alt="Drucker-Icon" />
                </figure>
              </div>
              <p class="mt-1">Seite drucken</p>
            </button>
          </div>
        </div>
      </aside>
    </section>
  </div>
</main>

<script src="/js/service.js"></script>
