---
pagination:
  data: level3array
  size: 1
  alias: service
  addAllPagesToCollections: true
permalink: "service/{{ service.key | slug }}/"
layout: layouts/default.liquid
tags: service
eleventyComputed:
  title: "{{ service.title }}"
  parentKey: "{{ service.parent.key }}"
  parentTitle: "{{ service.parent.title }}"
  breadcrumb: "{{ service.title }}"
---

<main class="section service pt-6">
  <div class="container">
    <div class="columns">
      <div class="column is-3">
        {% include partials/_circular-icon.html, iconKey: parentKey, iconTitle:
        parentTitle %}
      </div>
      <div class="column is-6 is-flex is-align-items-center">
        <h1 class="title is-3">{{ service.title }}</h1>
      </div>
    </div>
    <div class="columns">
      <div class="column is-3"></div>
      <div class="column is-6 main-column">
        <div class="buttons">
          {% if service.requirements %}
          <a class="button" href="#requirements">Voraussetzungen</a>
          {% endif %} {% if service.documents %}
          <a class="button" href="#documents">Unterlagen</a>
          {% endif %} {% if service.costs %}
          <a class="button" href="#costs">Gebühren</a>
          {% endif %} {% if service.time %}
          <a class="button" href="#time">Bearbeitungszeit</a>
          {% endif %}
        </div>

        {% if service.requirements %}
        <section id="requirements" class="pt-6">
          <h3 class="title is-4 pb-2 mt-6 mb-0 has-text-weight-normal">
            Voraussetzungen
          </h3>
          {% for element in service.requirements %} {% if element.label %}
          <details class="py-3">
            <summary>
              <div class="media">
                <div class="media-content">
                  <strong>{{ element.label }}</strong>
                </div>
                <div class="media-right">
                  <figure class="image is-32x32">
                    <img
                      class="arrow-down"
                      src="/images/arrow_down_off.svg"
                      alt="Pfeil-Icon"
                    />
                  </figure>
                </div>
              </div>
            </summary>
            <p class="pt-0">{{ element.content }}</p>
          </details>
          {% else %}
          <p class="py-3">{{ element }}</p>
          {% endif %} {% endfor %}
        </section>
        {% endif %} {% if service.documents %}
        <section id="documents" class="pt-6">
          <h3 class="title is-4 pb-3 mt-6 mb-0 has-text-weight-normal">
            Erforderliche Unterlagen
          </h3>
          {% for element in service.documents %} {% if element.label %}
          <details class="py-3">
            <summary>
              <div class="media">
                <div class="media-content">
                  <strong>{{ element.label }}</strong>
                </div>
                <div class="media-right">
                  <figure class="image is-32x32">
                    <img
                      class="arrow-down"
                      src="/images/arrow_down_off.svg"
                      alt="Pfeil-Icon"
                    />
                  </figure>
                </div>
              </div>
            </summary>
            <p class="pt-0">{{ element.content }}</p>
          </details>
          {% else %}
          <p class="py-3">{{ element }}</p>
          {% endif %} {% endfor %}
        </section>
        {% endif %} {% if service.costs %}
        <section id="costs" class="pt-6">
          <h3 class="title is-4 pb-2 mt-6 mb-0 has-text-weight-normal">
            Gebühren
          </h3>
          <ul class="pb-4 mt-4">
            {% for element in service.costs %}
            <li class="content mt-2 mb-0">
              {% if element.label %}
              <strong>{{ element.label }}</strong
              ><br />
              <p>{{ element.content }}</p>
              {% else %}
              {{ element }}
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </section>
        {% endif %} {% if service.time %}
        <section id="time" class="pt-6">
          <h3 class="title is-4 pb-2 mt-6 mb-0 has-text-weight-normal">
            Durchschnittliche Bearbeitungszeit
          </h3>
          <ul class="pb-4 mt-4">
            {% for element in service.time %}
            <li class="content mt-2 mb-0">
              {% if element.label %}
              <strong>{{ element.label }}</strong
              ><br />
              <p>{{ element.content }}</p>
              {% else %}
              {{ element }}
              {% endif %}
            </li>
            {% endfor %}
          </ul>
        </section>
        {% endif %}

        <section class="pt-6 bottom-buttons-wrapper">
          <a class="button is-light mt-5" disabled>Nötige Formulare aufrufen</a>
          <button class="button is-outlined mt-5" onclick="window.print()">
            Diese Seite als PDF herunterladen
          </button>
        </section>
      </div>
      <aside class="column is-3">
        <div>
          <a href="/map" class="button is-primary"
            >Termin in meiner Nähe suchen</a
          >

          <a
            href="/help/{{ service.key | slug }}/appointment"
            class="button is-primary mt-5"
            {%-
            unless
            service.appointment.berlin.url
            -%}
            disabled
            {%-
            endunless
            -%}
            >Termin in ganz Berlin suchen</a
          >

          <hr />

          <a href="/help/{{ service.key | slug }}" class="mt-5 link-portal">
            Zum Service-Portal Berlin >
            <br />
            {{ service.title }}
          </a>

          <div class="print-wrapper">
            <button class="print-button is-size-6">
              <div class="print-icon-wrapper">
                <figure class="image is-1by1">
                  <img src="/images/icon_drucken.svg" alt="Drucker-Icon" />
                </figure>
              </div>
              <p class="mt-1">Seite drucken</p>
            </button>
          </div>
        </div>
      </aside>
    </div>
  </div>
</main>

<script src="/js/print.js"></script>
